<p id="notice"><%= notice %></p>

<h1>Listing Hooligans</h1>

<table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Pesel</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @hooligans.each do |hooligan| %>
      <tr>
        <td><%= hooligan.first_name %></td>
        <td><%= hooligan.last_name %></td>
        <td><%= hooligan.pesel %></td>
        <td><%= link_to 'Show', hooligan %></td>
        <td><%= link_to 'Edit', edit_hooligan_path(hooligan) %></td>
        <td><%= link_to 'Destroy', hooligan, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

