<p id="notice"><%= notice %></p>

<h1>Wszystkie ligi</h1>

<table class="table table-striped table-responsive table-hover">
  <thead>
    <tr>
      <th>Nazwa Ligi</th>
      <th>Kraj</th>
      <th>Poziom</th>
      <th>Edytuj ligię</th>
      <th>Usuń ligę</th>
    </tr>
  </thead>

  <tbody>
    <% @leagues.each do |league| %>
      <tr>
        <td><%= league.name %></td>
        <td><%= league.country %></td>
        <td><%= league.level %></td>
        <!-- <td><%= link_to 'Show', league, class: "btn btn-info btn-sm" %></td> -->
        <td><%= link_to 'Edytuj ligę', edit_league_path(league), class: "btn btn-warning btn-sm" %></td>
        <td><%= link_to 'Usuń ligę', league, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-sm" %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
<%= link_to 'Dodaj nową ligę', new_league_path, class: "btn btn-primary" %>
