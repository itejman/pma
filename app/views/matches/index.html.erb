<% if notice %>
<div class="alert alert-success">
  <p class="text-center"><%= notice %></p>
</div>
<% end %>
<h1>Wyniki meczów</h1>
<hr>
<table class="table table-striped table-responsive">
  <thead>
    <tr>
      <th class="text-right">Gospodarze</th>
      <th></th>
      <th>Goście</th>
      <th class="text-right">Wynik dla Gospodarzy</th>
      <th></th>
      <th class="text-left">Wynik dla Gości</th>
      <% if user_signed_in? %>
        <th>Edytuj wynik</th>
        <th>Usuń wynik</th>
      <% end %>
    </tr>
  </thead>

  <tbody>
    <% @matches.each do |match| %>
      <tr>
        <td class="text-right"><%= match.host %></td>
        <td> - </td>
        <td><%= match.guest %></td>
        <td class="text-right"><%= match.host_goals %></td>
        <td class="text-center">:</td>
        <td class="text-left"><%= match.guest_goals %></td>

        <% if user_signed_in? %>
          <td><%= link_to 'Edytuj wynik', edit_match_path(match), class: "btn btn-warning btn-sm" %></td>
          <td><%= link_to 'Usuń wynik', match, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-sm" %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>


<br>

<%= link_to 'Dodaj wynik', new_match_path, class: "btn btn-primary" %>
