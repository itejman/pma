<h1>Wyniki meczów</h1>

<table class="table table-striped">
  <thead>
    <tr>
      <th>Gospodarze</th>
      <th></th>
      <th>Goście</th>
      <th class="text-right">Wynik dla Gospodarzy</th>
      <th></th>
      <th class="text-left">Wynik dla Gości</th>
      <!-- <th colspan="3"></th> -->
    </tr>
  </thead>

  <tbody>
    <% @matches.each do |match| %>
      <tr>
        <td><%= match.host %></td>
        <td> - </td>
        <td><%= match.guest %></td>
        <td class="text-right"><%= match.host_goals %></td>
        <td class="text-center">:</td>
        <td class="text-left"><%= match.guest_goals %></td>

        <!-- <td><%= link_to 'Show', match %></td>
        <td><%= link_to 'Edit', edit_match_path(match) %></td>
        <td><%= link_to 'Destroy', match, method: :delete, data: { confirm: 'Are you sure?' } %></td> -->
      </tr>
    <% end %>
  </tbody>
</table>

