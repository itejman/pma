<% if notice %>
  <div class="alert alert-success">
    <p class="text-center">
      <%= notice %>
    </p>
  </div>
<% end %>

<h1 class="text-center">Listy wszystkich trenerów</h1>
<hr>
<table class="table table-striped table-responsive">
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Age</th>
      <th>Więcej</th>
      <% if user_signed_in? %>
        <th>Edytuj</th>
        <th>Usuń</th>
      <% end %>
    </tr>
  </thead>

  <tbody>
    <% @coaches.each do |coach| %>
      <tr>
        <td><%= coach.first_name %></td>
        <td><%= coach.last_name %></td>
        <td><%= coach.age %></td>
        <td><%= link_to 'Więcej', coach, class: "btn btn-info btn-sm" %></td>
        <% if user_signed_in? %>
          <td><%= link_to 'Edytuj', edit_coach_path(coach), class: "btn btn-warning btn-sm" %></td>
          <td><%= link_to 'Usuń', coach, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-sm" %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<% if user_signed_in? %>
  <%= link_to 'Dodaj nowego trenera', new_coach_path, class: "btn btn-primary" %>
<% end %>
<hr>
<div class="text-center">
  <%= paginate @coaches %>
</div>
<hr>
