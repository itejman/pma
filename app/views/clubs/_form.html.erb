<% if notice %>
  <div class="alert alert-success text-center"><%= notice %></p>
<% end %>

<%= form_for(@club) do |f| %>
  <% if @club.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@club.errors.count, "error") %> prohibited this club from being saved:</h2>

      <ul>
      <% @club.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-group">
    <%= f.label :name, "Nazwa Klubu" %><br>
    <%= f.text_field :name, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= f.label :address %><br>
    <%= f.text_area :address, class: "form-control"  %>
  </div>
  <div class="form-group">
    <%= f.label :start_year, "Data założenia klubu" %><br>
    <%= f.datetime_select :start_year  %>
  </div>

  <div class="form-group s-mas">
    <%= f.label 'Nazwa Ligi' %><br>
    <%= f.select :league_id, @leagues, { class: "select-mas" }  %>
  </div>

  <div class="form-group s-mas">
    <%= f.label 'Trener' %><br>
    <%= f.select :coach_id, @coaches, class: "select-mas"  %>
  </div>

  <div class="form-group s-mas">
    <%= f.label 'Nazwa Stadionu' %><br>
    <%= f.select :stadium_id, @stadiums, class: "select-mas" %>
  </div>

  <div class="form-group s-mas">
    <%= f.label 'Główny sponsor' %><br>
    <%= f.select :sponsor_id, @sponsors, class: "select-mas"  %>
  </div>

  <div class="actions">
    <%= f.submit "Dodaj Klub", class: "btn btn-primary" %>
  </div>
<% end %>
