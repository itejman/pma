<% if notice %>
<div class="alert alert-success">
  <p class="text-center"><%= notice %></p>
</div>
<% end %>

<h1>Lista wszystkich sponsorów</h1>
<hr>
<table class="table table-striped table-hover">
  <thead>
    <tr>
      <th>Nazwa sponsorów</th>
      <th>Adres sponsora</th>
      <th>Strona www</th>
      <% if user_signed_in? %>
        <th>Edytuj sponsora</th>
        <th>Usuń sponsora</th>
      <% end %>
    </tr>
  </thead>

  <tbody>
    <% @sponsors.each do |sponsor| %>
      <tr>
        <td><%= sponsor.name %></td>
        <td><%= sponsor.address %></td>
        <td><%= sponsor.website %></td>
        <% if user_signed_in? %>
          <td><%= link_to 'Edytuj sponsora', edit_sponsor_path(sponsor), class: "btn btn-warning btn-sm" %></td>
          <td><%= link_to 'Usuń sponsora', sponsor, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-danger btn-sm" %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<% if user_signed_in? %>
<%= link_to 'Dodaj nowego sponsora', new_sponsor_path, class: "btn btn-primary" %>
<% end %>
